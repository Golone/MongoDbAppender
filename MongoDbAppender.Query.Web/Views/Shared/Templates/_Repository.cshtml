@using LogLevel = MongoDbAppender.Query.Dto.LogLevel;
    <script type="text/html" id="repo">
        <div class="panel panel-default">
            <div class="panel-heading">
                {{name}}
                <a class="glyphicon glyphicon-refresh pull-right" href="#refresh" onclick="loadRepo('{{name}}', $(this).parents('.repoContainer')); return false;"></a>
            </div>
            <div class="list-group">
                @foreach (LogLevel logLevel in Enum.GetValues(typeof(LogLevel)))
                {
                    var levelInLower = logLevel.ToString().ToLower();
                    var isActive = ViewBag.ActiveLevel != null && (LogLevel)ViewBag.ActiveLevel == logLevel;
                    <a class="list-group-item @(isActive ? "active" : string.Empty)" href="{{appRoot}}repositories/{{name}}#level=@levelInLower">
                        <span class="badge">{{stat.@levelInLower}}</span>
                        @*// TODO: i18n*@
                        @logLevel
                    </a>
                }
            </div>
        </div>
    </script>
